<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="CarouselPageNavigation.AddOrderPage">
	<ContentPage.Padding>
			<OnPlatform x:TypeArguments="Thickness" iOS="0,20,0,0" Android="0,0,0,0" />
	</ContentPage.Padding>
	
	<ContentPage.Content>

		<StackLayout Padding="0,0,0,0" Orientation="Vertical" BackgroundColor="#f0efed">
			<Entry x:Name="entOrderName" Placeholder="Type Order Name..." BackgroundColor="#f0efed" />

		
			<!--<ListView x:Name="ProductsList" Header="" ItemTapped="OnItemTapped">-->
			<ListView x:Name="ProductsList" Header="" >
				<ListView.HeaderTemplate>
					<DataTemplate>
						<Grid >
							<StackLayout BackgroundColor="#f0efed" Padding="10,0,10,0">
								<!-- <Label Text="{Binding Name}" FontSize="15" TextColor="#333333" /> -->
								<Label 
									Text="Select or deselect products from" 
									FontSize="15" 
									TextColor="#333333" >
								</Label>

								<Label 
									Text="list below by swiping right" 
									FontSize="15" 
									TextColor="#333333" >
								</Label>
					
								<ContentView Padding="0,10,0,0">
									<Label 
										Text="PRODUCTS" 
										FontSize="20" 
										TextColor="#333333" />
								</ContentView>
							</StackLayout>
						</Grid>
					</DataTemplate>
				</ListView.HeaderTemplate>
				
			  <ListView.ItemTemplate>
			    <DataTemplate>
			      <ViewCell Height="95">
			         <ViewCell.ContextActions>
			            <MenuItem Clicked="OnAdd" CommandParameter="{Binding .}"
			               Text="ADD" />
			         </ViewCell.ContextActions>


			         <StackLayout Orientation="Horizontal" Padding="3,5,0,5" >
							<StackLayout Orientation="Horizontal">
								<Image Source="{Binding image}" />
							</StackLayout>
							
					         <StackLayout Orientation="Vertical"  Padding="0,5,0,5" VerticalOptions="CenterAndExpand">
								<!--<ContentView HorizontalOptions="Start">
								</ContentView>-->
								<Label Text="{Binding id}" IsVisible='false' TextColor="#333333" />
								<Label Text="{Binding name}" FontSize="14" TextColor="#333333" />
								<Label Text="{Binding description}" FontSize="12" TextColor="#333333" />
								<Label Text="{Binding price}" FontSize="13" TextColor="#333333" />
								<!--<Label BindingContext="{x:Reference Name=stepper}"  Text="{Binding Value}" TextColor="#333333" />-->
								<!--<Stepper x:Name="stepper" Minimum="0" Increment="1" Value="{Binding Quantity}"  />	-->
					         </StackLayout>

							<StackLayout Orientation="Vertical" Padding="3,0,3,0" VerticalOptions='Center' HorizontalOptions='EndAndExpand' >
								<Label Text="{Binding Source={x:Reference stepper}, Path=Value}" TextColor="#333333" HorizontalOptions='Center' />
								<Stepper x:Name="stepper" Minimum="0" Increment="1" Value="{Binding quantity}"  />
							</StackLayout>		
					</StackLayout>

							
			      </ViewCell>
			    </DataTemplate>
			  </ListView.ItemTemplate>
			</ListView>

			<StackLayout BackgroundColor="#333333" Orientation="Horizontal" Grid.Row="1" HorizontalOptions="FillAndExpand" >
				<Button 
					TextColor="#f0efed"
					BackgroundColor="#333333"	
					x:Name="btnCancel"		
					Text="Cancel" 
					WidthRequest="100" 
					HeightRequest="50" 
					HorizontalOptions="FillAndExpand"
					VerticalOptions="FillAndExpand"
					Clicked="OnCancel"	
					/>



				<Button 
					BorderRadius="0"
					TextColor="#f0efed"
					BackgroundColor="#4caa77"	
					x:Name="btnSave"	
					Text="Save" 
					WidthRequest="100" 
					HeightRequest="50" 
					HorizontalOptions="FillAndExpand"
					VerticalOptions="FillAndExpand"
					Clicked="OnSave"
					/>
				
			</StackLayout>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>
