<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="CarouselPageNavigation.DeleteOrderPage">
	<ContentPage.Content>
		<StackLayout Padding="10,5,0,5">
				<Label>
					<Label.FormattedText>
				        <FormattedString>
				            <FormattedString.Spans>
				                <Span Text="Order List" ForegroundColor="#aaa" FontAttributes="Bold" FontSize="30" />
				            </FormattedString.Spans>
				        </FormattedString>
				    </Label.FormattedText>
				</Label>

				<Label>
					<Label.FormattedText>
				        <FormattedString>
				            <FormattedString.Spans>
				                <Span Text="This is your current order list, " ForegroundColor="#aaa" FontSize="12" />
				            </FormattedString.Spans>
				        </FormattedString>
				    </Label.FormattedText>
				</Label>

				<Label>
					<Label.FormattedText>
				        <FormattedString>
				            <FormattedString.Spans>
				                <Span Text="To delete single one, tap it " ForegroundColor="#aaa" FontSize="12"/>
				            </FormattedString.Spans>
				        </FormattedString>
				    </Label.FormattedText>
				</Label>
			<ContentView Padding="0,20,0,0">
				<Label>
					<Label.FormattedText>
				        <FormattedString>
				            <FormattedString.Spans>
				                <Span Text="ORDERS " ForegroundColor="#aaa" FontSize="20"/>
				            </FormattedString.Spans>
				        </FormattedString>
				    </Label.FormattedText>
				</Label>
			</ContentView>
		
		<ListView x:Name="OrderList">
		  <ListView.ItemTemplate>
		    <DataTemplate>
		      <ViewCell Height="50" x:Name="vc">
		         <ViewCell.ContextActions>
		            <MenuItem Clicked="OnDelete"
		               Text="Delete" IsDestructive="True" CommandParameter="{Binding RecordIdentifier}" />
		         </ViewCell.ContextActions>
		         <StackLayout Orientation="Vertical" VerticalOptions="CenterAndExpand" HorizontalOptions="Start">
					<Label Text="{Binding orderName}" />
		         </StackLayout>
		      </ViewCell>
		    </DataTemplate>
		  </ListView.ItemTemplate>
		</ListView>

		</StackLayout>
	</ContentPage.Content>
</ContentPage>
