<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="CarouselPageNavigation.EditOrderPage">
	<ContentPage.Content>
		<StackLayout VerticalOptions="StartAndExpand" Orientation="Vertical">
			<Label x:Name="oName" Text="" />
			<Label x:Name="countProducts" Text="" />

       <StackLayout VerticalOptions="FillAndExpand" Orientation="Vertical">
			<ListView x:Name="ProductList" >
			  <ListView.ItemTemplate>
			    <DataTemplate>
			      <ViewCell Height="150">
			         <!--<ViewCell.ContextActions>
			            <MenuItem Clicked="OnAdd" CommandParameter="{Binding .}"
			               Text="ADD" />
			         </ViewCell.ContextActions>-->

						<Grid BackgroundColor="Gray">
							<StackLayout Orientation="Vertical"  Padding="10,5,0,5" VerticalOptions="CenterAndExpand">
							<ContentView HorizontalOptions="Start">
								<Image Source="{Binding Img}" />
							</ContentView>
							<Label Text="{Binding Name}" />
							<Label Text="{Binding Description}" />
							<Label Text="{Binding Price}" />
				         	</StackLayout>
						</Grid>		
			      </ViewCell>
			    </DataTemplate>
			  </ListView.ItemTemplate>
			</ListView>
			
			<ListView x:Name="ProductList2" >
			  <ListView.ItemTemplate>
			    <DataTemplate>
					<ViewCell Height="150">
						<!--<ViewCell.ContextActions>
			            <MenuItem Clicked="OnAdd" CommandParameter="{Binding .}"
			               Text="ADD" />
			         	</ViewCell.ContextActions>-->
						<StackLayout Orientation="Vertical">
						<ContentView HorizontalOptions="Start">
							<Image Source="{Binding Img}" />
						</ContentView>
						<Label Text="{Binding Name}" />
						<Label Text="{Binding Description}" />
						<Label Text="{Binding Price}" />
			         	</StackLayout>	
			      </ViewCell>
			    </DataTemplate>
			  </ListView.ItemTemplate>
			</ListView>
			</StackLayout>

		</StackLayout>
	</ContentPage.Content>
</ContentPage>
