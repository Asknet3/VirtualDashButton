<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:xreference="clr-namespace:Xamarin.Forms.Xaml" x:Class="CarouselPageNavigation.EditOrderPage">

	<ContentPage.Padding>
		<OnPlatform x:TypeArguments="Thickness" iOS="0,20,0,0" Android="0,0,0,0" />
	</ContentPage.Padding>
	
	<ContentPage.Content>
		<StackLayout VerticalOptions="FillAndExpand" Orientation="Vertical" BackgroundColor="#f0efed">

			<Label x:Name="oName" Text="" TextColor="#333333"  />
			<Label x:Name="countProducts" Text="" TextColor="#333333"  />
			<!--<ListView x:Name="ProductList" CachingStrategy="RecycleElement" >-->
			<ListView x:Name="ProductList" >
			  <ListView.ItemTemplate>
			    <DataTemplate>
			      <ViewCell BindingContextChanged="OnBindingContextChanged">
			         <ViewCell.ContextActions>
			            <MenuItem Clicked="OnAdd" CommandParameter="{Binding .}" 
			               	Text="ADD" />
			         </ViewCell.ContextActions>

						<Grid BackgroundColor="#f0efed">
							<StackLayout Orientation="Horizontal" Padding="10,5,0,5" BackgroundColor="#f0efed" >
								<StackLayout Orientation="Horizontal" BackgroundColor="#f0efed">
								<!--<ContentView HorizontalOptions="Start">-->
									<!--<Image Grid.Column="0" Source="Checked.png" Margin="5" IsVisible="{Binding IsChecked}"/>
	                                <Image Grid.Column="0" Source="Unchecked.png" Margin="5" IsVisible="{Binding UnChecked}"/>		-->
									<Image Source="{Binding product.Img}" />
								<!--</ContentView>-->
								</StackLayout>
								<StackLayout Orientation="Vertical" BackgroundColor="#f0efed" >
									<Label Text="{Binding product.Name}" TextColor="#333333" />
									<Label Text="{Binding product.Description}" TextColor="#333333" />
									<Label Text="{Binding product.Price}" TextColor="#333333" />
									<Stepper x:Name="stepper" Minimum="0" Increment="1" Value="{Binding quantity}" IsVisible="{Binding isInOrder}"  />	
									<Label BindingContext="{x:Reference Name=stepper}"  Text="{Binding Value}" IsVisible="{Binding IsVisible}" TextColor="#333333" />
									<Label Text="{Binding TextContainsInList}" IsVisible="{Binding isInOrder}" TextColor="#333333" />
					         	</StackLayout>
							</StackLayout>	
						</Grid>
			      </ViewCell>
			    </DataTemplate>
			  </ListView.ItemTemplate>
			</ListView>

			<StackLayout BackgroundColor="#333333" Orientation="Horizontal" Grid.Row="1" HorizontalOptions="FillAndExpand" >
				<Button 
					TextColor="#f0efed"
					BackgroundColor="#333333"
					x:Name="btnSave"	
					Text="Save" 
					WidthRequest="100" 
					HeightRequest="50" 
					HorizontalOptions="FillAndExpand"
					VerticalOptions="FillAndExpand"
					/>
				
				<Button 
					TextColor="#f0efed"
					BackgroundColor="#333333"
					x:Name="btnCancel"		
					Text="Cancel" 
					WidthRequest="100" 
					HeightRequest="50" 
					HorizontalOptions="FillAndExpand"
					VerticalOptions="FillAndExpand"
					Clicked="OnCancel"	
					/>
			</StackLayout>
			
		</StackLayout>
		
	</ContentPage.Content>
</ContentPage>
